@using EntityLayer.Concreate
@model List<WriterMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           

                            <tr>
                                <td>@item.WriterMessageid</td>
                                <td>@item.Subject</td>
                                <td>@item.SenderName</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MM-yyyy"))</td>

                                <td><label class=""></label></td>
                                <td>
                                    <a href="/Writer/MessageController/MessagDetails/@item.WriterMessageid" class="btn btn-outline-primary">Mesajı Gör</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

