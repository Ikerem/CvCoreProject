@model CvCoreProject5._0.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Yazar Giriş</title>
    <!-- plugins:css -->
    <link href="~/form--main/index.css" rel="stylesheet" />
</head>

<body>
    <section>
        <div class="form-group">
            <div class="form-value">
                <form class="pt-3" method="post">
                    <div class="inputbox">
                      
                        <span asp-validation-for="Name" class="text-danger">   </span>
                        <input type="text" asp-for="Name" class="form-control" />
                        <label for="">Adınız</label>

                    </div>
                    <div class="inputbox">
                        <span asp-validation-for="Surname" class="text-danger">   </span>
                        <input type="text" asp-for="Surname" class="form-control" />
                        <label for="">Soyadınız</label>
                    </div>
                    <div class="inputbox">
                      
                        <span asp-validation-for="UserName" class="text-danger">   </span>
                        <input type="text" asp-for="UserName" class="form-control" />
                        <label>
                            Kulanıcı adı
                        </label>
                    </div>
                    <div class="inputbox">
                       
                        <span asp-validation-for="ImageUrl" class="text-danger">   </span>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <label>
                            Görsel
                        </label>
                    </div>
                    <div class="inputbox">
                       
                        <span asp-validation-for="Password" class="text-danger">   </span>
                        <input type="text" asp-for="Password" class="form-control" />
                        <label>
                            Şifre
                        </label>
                    </div>
                    <div class="inputbox">
                        
                        <span asp-validation-for="ConfirmPassword" class="text-danger">   </span>
                        <input type="text" asp-for="ConfirmPassword" class="form-control" />
                        <label>
                            Tekrar  Şifre
                        </label>
                    </div>
                    <div class="inputbox">
                      
                        <span asp-validation-for="Mail" class="text-danger">   </span>
                        <input type="text" asp-for="Mail" class="form-control" />
                        <label>
                            Mail
                        </label>
                    </div>

                    <div class="text-danger" asp-validation-summary="ModelOnly">
                    </div>

                    <div class="mt-3">
                        <button class="btn btn-primary ">Kayıt Ol</button>
                        @*  <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-action="Index" >Kayıt Ol</a>*@
                    </div>
                    @*    <div class="text-center mt-4 font-weight-light">
                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                    </div>*@
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <!-- endinject -->
</body>
</html>



