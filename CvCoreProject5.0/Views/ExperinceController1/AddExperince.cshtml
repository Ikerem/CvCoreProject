@model EntityLayer.Concreate.Experince
@{
    ViewData["Title"] = "AddExperince";
    Layout = "~/Views/Shared/_NewAdimLayout.cshtml";
}

<div class="card-header border-0">
    <h3>
        Deneyim Ekleme Sayfası
    </h3>
</div>
@using (Html.BeginForm("AddExperince", "ExperinceController1", FormMethod.Post))
{
   
    <br />
    @Html.Label("Yetenek Başlığı")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x=>x.Date,new{@class="form-control"})
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(x=>x.ImgUrl,new{@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description,10,3,new{@class="form-control"})
    <br />
    <button class="btn btn-outline-success">Kaydet</button>
}

