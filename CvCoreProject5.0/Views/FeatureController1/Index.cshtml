@model EntityLayer.Concreate.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdimLayout.cshtml";
}


@using (Html.BeginForm("Index", "FeatureController1", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.Featureid)
    <br />
   <Label>Başlık</Label>
    @Html.TextBoxFor(x=>x.Header,new{@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>
}


