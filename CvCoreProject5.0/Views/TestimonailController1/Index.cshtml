@using EntityLayer.Concreate
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdimLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>


                                <th> Görsel </th>
                                <th> Ad SoyAd </th>
                                <th> Şirket </th>
                                <th> Unvan </th>
                                <th> Sil</th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> <img src="@item.ImgUrl " alt="imge" /></td>
                                    <td> @item.ClientName</td>
                                    <td> @item.Company</td>
                                    <td> @item.Title</td>
                                    <td> <a href="/TestimonailController1/DeleteTestimonial/@item.Testimonialid  " class="btn btn-outline-warning">Sil</a></td>
                                    <td> <a href="/TestimonailController1/EditTestimonial/@item.Testimonialid  " class="btn btn-outline-info ">Detaylar</a></td>

                                </tr>

                            }
                        </tbody>
                    </table>

                    <a href="/TestimonailController1/AddTestimonial/" class="btn btn-outline-info">    Yeni Refereans ekle </a>
                </div>
            </div>
        </div>
    </div>
</div>

