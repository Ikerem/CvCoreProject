@model EntityLayer.Concreate.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdimLayout.cshtml";
}

<div class="card-header border-0">
    <h3>
       Hakkımda Sayfası Düzenleme
    </h3>
</div>
@using (Html.BeginForm("Index", "AboutController1", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.Aboutid)
    <br />
    <Label>Başlık</Label>
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description,10,3,new{@class="form-control"})
    <br />
    <label>Yaş</label>
    @Html.TextBoxFor(x=>x.Age,new{@class="form-control"})
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x=>x.Mail,new{@class="form-control"})
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x=>x.Phone,new{@class="form-control"})
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x=>x.Adress,new{@class="form-control"})
    <br />
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x=>x.ImagUrl,new{@class="form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>
}

