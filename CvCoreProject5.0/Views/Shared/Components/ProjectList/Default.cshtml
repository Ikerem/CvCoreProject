@using EntityLayer.Concreate
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Ana Görsel </th>
                                <th> Proje Adı </th>
                                <th> Değer </th>
                                <th> Fiyatı </th>
                      
                                <th> Proje Platformu </th>
                                <th> Resim </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                            <tr>
                                    <td> @item.Portfolioid </td>
                                <td>
                                        <img src="@item.ImgUrl">
                                </td>
                                  
                                <td> @item.Name </td>
                                <td> @item.Values% </td>
                                <td> @item.Price </td>
                               
                                    <td> <img src="@item.Platform"> </td>
                             
                                <td>
                                        <a href="/PortfolioController1/PortfolioEdit/@item.Portfolioid">
                                          
                                    <div class="btn btn-outline-success">Detayları Gör</div>
                                        </a>
                                </td>
                            </tr>
                            }
                    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
