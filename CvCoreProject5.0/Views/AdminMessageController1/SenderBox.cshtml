@using EntityLayer.Concreate
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderBox";
    Layout = "~/Views/Shared/_NewAdimLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class=" card-body">
            <h4 class="card-title">Yazar-Admin Gelen Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Alıcı</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WriterMessageid</td>
                                <td>@item.ReciverName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date</td>
                                <td> <a href="/AdminMessageController1/MessageDelete/@item.WriterMessageid    " class="btn btn-outline-danger">sil</a>  </td>
                                <td> <a href=" /AdminMessageController1/AdminMessageDetails/@item.WriterMessageid " class="btn btn-outline-success">Mesajı Gör</a>  </td>
                            </tr>

                        }
                        <a asp-action="Index" class="btn btn-primary mr-2">Admin  Gelen Mesajlar</a>
                        <a asp-action="Index" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>
                    </tbody>

                </table>

            </div>

        </div>

    </div>



</div>

