@using EntityLayer.Concreate
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdimLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projelerim Sayfası</h4>
           
                <div class="table-responsive">
                     <a href="/PortfolioController1/AddPortfolio" class="btn btn-outline-info">Yeni Proje Ekle </a>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Proje Adı </th>
                                <th> Değer </th>
                                <th> Fiyatı </th>
                                <th> Proje Platformu </th>
                                <th> Resim </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                          
                            <tr>
                                <td> @item.Portfolioid </td>
                                <td> @item.Name </td>
                                <td>
                                    <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: @item.Values%" aria-valuenow="@item.Values" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td> @item.Price </td>
                                <td> @item.Platform </td>
                                    <td> @item.ImgUrl </td>
                                    <td>
                                        <a href="/PortfolioController1/DeletePortfolio/@item.Portfolioid" class="btn btn-outline-danger"> Sil </a>
                                    </td>
                                    <td>
                                        <a href="/PortfolioController1/PortfolioEdit/@item.Portfolioid" class="btn btn-outline-success"> Güncelle </a>
                                    </td>
                            </tr>
                            }
                     
                        </tbody>

                    </table>
                    <br />
                
                   
                </div>
            </div>
        </div>
    </div>


</div>